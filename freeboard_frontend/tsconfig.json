{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/components/units/products/write/ProductWrite.container.tsx",
    "src/components/commons/hocs/withAuth.js",
    "src/components/commons/hooks/useAuth.js",
    "src/components/units/products/commentlist/ProductCommentList.queries.js",
    "src/components/units/products/commentlist/ProductCommentList.styles.js"
  ],
  "exclude": ["node_modules"]
}
